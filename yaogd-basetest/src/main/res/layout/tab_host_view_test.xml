<?xml version="1.0" encoding="utf-8"?>
<TabHost xmlns:android="http://schemas.android.com/apk/res/android"
         android:layout_width="match_parent"
         android:layout_height="match_parent"
         android:id="@android:id/tabhost"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        >
        <FrameLayout
            android:id="@android:id/tabcontent"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            ></FrameLayout>

        <!-- 隐藏TabWidget -->
        <TabWidget
            android:id="@android:id/tabs"
            android:visibility="gone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            >
        </TabWidget>

        <!-- 视觉上,用单选按钮替代TabWidget -->
        <RadioGroup
            android:id="@+id/main_radio_group"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/color04"
            android:paddingTop="8dp"
            android:orientation="horizontal"
            >

            <RadioButton
                android:id="@+id/tab_icon_01"
                android:layout_width="0dp"
                android:layout_height="45dp"
                android:button="@null"
                android:gravity="center"
                android:layout_weight="1"
                android:checked="true"
                android:textColor="@color/color17"
                android:text="A"
                android:textSize="12sp"
                android:singleLine="true"
                />

            <RadioButton
                android:id="@+id/tab_icon_02"
                android:layout_width="0dp"
                android:layout_height="45dp"
                android:button="@null"
                android:gravity="center"
                android:layout_weight="1"
                android:checked="true"
                android:textColor="@color/color17"
                android:text="B"
                android:textSize="12sp"
                android:singleLine="true"
                />


            <RadioButton
                android:id="@+id/tab_icon_03"
                android:layout_width="0dp"
                android:layout_height="45dp"
                android:button="@null"
                android:gravity="center"
                android:layout_weight="1"
                android:checked="true"
                android:textColor="@color/color17"
                android:text="C"
                android:textSize="12sp"
                android:singleLine="true"
                />


            <RadioButton
                android:id="@+id/tab_icon_04"
                android:layout_width="0dp"
                android:layout_height="45dp"
                android:button="@null"
                android:gravity="center"
                android:layout_weight="1"
                android:checked="true"
                android:textColor="@color/color17"
                android:text="D"
                android:textSize="12sp"
                android:singleLine="true"
                />

        </RadioGroup>
    </LinearLayout>
</TabHost>