<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:id="@+id/main_header_relativelayout" 
  	android:layout_width="match_parent"
	android:layout_height="50dp"
	android:background="@drawable/main_header_bg_style"
	
  	>
    <ImageView
    	android:id="@+id/main_head_back"
  		android:layout_width="wrap_content"
		android:layout_height="match_parent"
		android:layout_centerVertical="true"
		android:layout_alignParentLeft="true"
		android:paddingRight="20dp"
		android:layout_marginLeft="5.0dip"
		android:src="@drawable/main_header_back_style"
		android:visibility="gone"
		/>
    
    <TextView 
        android:id="@+id/main_head_title"
        style="@style/text_title_style"
		android:layout_centerInParent="true"
		android:layout_centerVertical="true"
		/>
    
    <TextView
           android:id="@+id/small_label"
           android:layout_toLeftOf="@id/main_head_title"
           android:layout_centerVertical="true"
           style="@style/text_title_style"
           android:textSize="18sp" 
           android:visibility="gone"
           />
    
	<ImageView
    	android:id="@+id/main_head_right"
  		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_centerVertical="true"
		android:layout_alignParentLeft="true"
		android:paddingRight="5.0dip"
		android:layout_marginLeft="5dp"
		android:visibility="gone"
		
		/>
	<TextView 
	    android:id="@+id/main_head_right_text"
	    android:layout_width="wrap_content"
	    android:layout_height="match_parent"
	    android:layout_centerVertical="true"
		android:layout_alignParentRight="true"
		android:paddingRight="5dp"
		android:visibility="gone"
		android:textSize="20sp"
		android:textColor="@color/main_header_text_change"
		android:gravity="center"
		android:clickable="true"
		android:layout_marginLeft="5dp"
		android:paddingLeft="20dp"
	    />
   	
</RelativeLayout>

