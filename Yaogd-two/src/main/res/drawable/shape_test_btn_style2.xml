<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    
	<item android:state_pressed="true" >
		 <shape >  
		    <!-- 渐变 -->  
		    <gradient  
		        android:startColor="#ff8c00"  
		        android:endColor="#FFFFFF"  
		        android:type="linear"
		        android:angle="270"
		        />  
		    <!-- 描边 -->  
		    <stroke  
		        android:width="2dp"  
		        android:color="#dcdcdc"  
		        />  
		    <!-- 圆角 -->  
		    <corners  
		        android:radius="2dp" />  
		    <padding  
		        android:left="20dp"  
		        android:top="20dp"  
		        android:right="20dp"  
		        android:bottom="20dp" />  
		</shape> 
	</item>
	    
	<item android:state_pressed="false" >
	    <shape >  
		    <!-- 渐变 -->  
		    <gradient  
		        android:startColor="#ff8c00"  
		        android:endColor="#FFFFFF"  
		        android:type="linear"
		        android:angle="90"
		        />  
		    <!-- 描边 -->  
		    <stroke  
		        android:width="2dp"  
		        android:color="#dcdcdc"  
		        />  
		    <!-- 圆角 -->  
		    <corners  
		        android:radius="2dp" />  
		    <padding  
		        android:left="20dp"  
		        android:top="20dp"  
		        android:right="20dp"  
		        android:bottom="20dp" />  
		</shape> 
	</item>
</selector>